<div style="background-color:skyblue; width:80%; height:200px; border:5px solid blue;" >
<h2>Add a Comment</h2>

<%= form_with(model: [@post, Comment.new], url: post_comments_path(@post), method: :post) do |form| %>
  
  <%= form.text_area :content, placeholder: "Write your comment here...", :style => "width:90%; height:100px; background-color:powderblue; " %>
  <%= form.submit "Add Comment" %>

<% end %>
</div>
<%= link_to 'Back to Posts', posts_path %>