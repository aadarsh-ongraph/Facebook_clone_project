<h1><%= @user.name %>'s Profile</h1>

<h2>Profile Information</h2>
<% if @profile %>
  <p>Email: <%= @user.email %></p>
  <p>Location: <%= @profile.location %></p>
  <p>About Me: <%= @profile.about_me %></p>
<% else %>
  <p>No profile information available.</p>
<% end %>

<% if current_user != @user && !current_user.friends.include?(@user) %>
  <%= link_to 'Send Friend Request', send_friend_request_user_path(@user), method: :post %>
<% end %>

<% if current_user.received_friend_requests.exists?(sender: @user) %>
  <%= link_to 'Accept Friend Request', accept_friend_request_user_path(@user), method: :post %>
<% end %>
