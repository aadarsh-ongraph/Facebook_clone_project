<h1>Post</h1>
<div>
  <p><%= @post.content %></p>
  <p>Author: <%= @post.user.first_name %></p>
  
</div>

<!-- this is use in comments controller  first work comments controller create else error-->
<h2>Comments</h2>
<%= render @post.comments %>

<%= form_for [@post, Comment.new] do |f| %>
  <%= f.text_area :content, placeholder: 'Add a comment...' %>
  <%= f.submit 'Comment' %>
<% end %>
